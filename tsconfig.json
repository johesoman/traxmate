{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "es2020"
    ],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "exclude": ["node_modules", "dist/*"]
}
